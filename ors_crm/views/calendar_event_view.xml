<odoo>
<data>

    <!-- Calendar Event view expand -->
    <record id="ors_view_calendar_event_form" model="ir.ui.view">
        <field name="name">ors.calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_misc']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='location']" position="after">
                <label for="user_id"/>
                <field name="user_id" nolabel="1" widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>

</data>
</odoo>
